<div id="add-vendor-form" title="Create New Vendor" style="display: none; background-color: #ffffff;">

    <table width="100%" class="table" style="padding:3px">
      <tr>
        <td >
          <label class="textlabel stackedLabel mandatory" for="addVendorFullName">Full name</label>
          <input id="addVendorFullName" type="text" placeholder="Enter Vendor full name" required="">
        </td>
      </tr>

      <tr>
        <td >
          <label class="textlabel stackedLabel mandatory" for="addVendorShortName">Short name</label>
          <input id="addVendorShortName" type="text" placeholder="Enter Vendor short name" required="">
        </td>
      </tr>

      <tr>
        <td >
          <label class="textlabel stackedLabel mandatory" for="addVendorUrl">URL</label>
          <input id="addVendorUrl" type="url" placeholder="Enter Vendor url" required="">
        </td>
      </tr>

    </table>

    <hr noshade size="1" style="background-color: #66c1c2; border-color: #59D1C4;"/>
    <div>
      <input type="button" value="Add Vendor"
            class="addButton" onclick="submitAddVendor('addVendorFullName', 'addVendorShortName', 'addVendorUrl')"/>
    </div>
    <div id="divVendorSearchAddVendorError" style="visibility:hidden">
        Errortext
    </div>


</div>
